{
    "manifest_version": 3,
    "name": "AdRadication",
    "description": "An extension-based topdown action game based around Ad Trackers",
    "version": "1.0.0",
    "permissions": [
      "storage",
      "webRequest"
    ],
    "host_permissions":[
      "https://*/*",
      "http://*/*"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["res/*"],
      "matches": ["<all_urls>"]
    }]
  }